<p id="notice"><%= notice %></p>

<h1>Addresses</h1>

<table>
  <thead>
    <tr>
      <th>First name</th>
      <th>Last name</th>
      <th>Unit number</th>
      <th>Street number</th>
      <th>Street name</th>
      <th>Suburb</th>
      <th>State</th>
      <th>Post code</th>
      <th>Country</th>
      <th>Phone</th>
      <th>User</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @addresses.each do |address| %>
      <tr>
        <td><%= address.first_name %></td>
        <td><%= address.last_name %></td>
        <td><%= address.unit_number %></td>
        <td><%= address.street_number %></td>
        <td><%= address.street_name %></td>
        <td><%= address.suburb %></td>
        <td><%= address.state %></td>
        <td><%= address.post_code %></td>
        <td><%= address.country %></td>
        <td><%= address.phone %></td>
        <td><%= address.user_id %></td>
        <td><%= link_to 'Show', address %></td>
        <td><%= link_to 'Edit', edit_address_path(address) %></td>
        <td><%= link_to 'Destroy', address, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

