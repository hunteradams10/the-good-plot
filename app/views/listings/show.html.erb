<p id="notice"><%= notice %></p>

<div>
  <% if @listing.picture.attached? %>
    <%= image_tag @listing.picture, alt: @listing.title %>
    <% else %>
    <%= image_tag "https://placekitten.com/200/300", alt: @listing.title %>
    <% end %>
</div>

<%= button_to "Buy this book", place_order_path %>


<p>
  <strong>Title:</strong>
  <%= @listing.title %>
</p>

<p>
  <strong>Author:</strong>
  <%= @listing.author %>
</p>

<p>
  <strong>Publisher:</strong>
  <%= @listing.publisher %>
</p>

<p>
  <strong>Price:</strong>
  <%= @listing.price %>
</p>

<p>
  <strong>Summary:</strong>
  <%= @listing.summary %>
</p>

<p>
  <strong>Sold:</strong>
  <%= @listing.sold %>
</p>

<p>
  <strong>Condition:</strong>
  <%= @listing.condition %>
</p>

<p>
  <strong>Genre:</strong>
  <%= @listing.genre_id %>
</p>

<p>
  <strong>User:</strong>
  <%= @listing.user_id %>
</p>
<% if user_signed_in? && current_user.id == @listing.user_id %>
  <%= link_to 'Edit', edit_listing_path(@listing) %> |
<% end %>

<%= link_to 'Back', listings_path %>
