<%# The table below is how the data for the Listings Page is represented. I hope I get time to change this %>
<%# not great for responsivity. %>


<h1>Listings</h1>

<div class="d-flex p-2">
<table class="table">
  <thead>
    <tr>
      <th>Title</th>
      <th>Author</th>
      <th>Publisher</th>
      <th>Price</th>
      <th>Summary</th>
      <th>Sold</th>
      <th>Condition</th>
      <th>Genre</th>
      <th>User</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @listings.each do |listing| %>
      <tr>
        <td><%= listing.title %></td>
        <td><%= listing.author %></td>
        <td><%= listing.publisher %></td>
        <td><%= listing.price %></td>
        <td><%= listing.summary %></td>
        <td><p class="status"><%= listing.sold %></p></td>
        <td><%= listing.condition %></td>
        <td><%= listing.genre_id %></td>
        <td><%= listing.user_id %></td>
        <td><%= link_to 'Show', listing %></td>
        <%# If the user is logged in and is the same user that created the listing, OR an admin, they can edit/destroy listings %>
        <% if current_user && current_user.id == listing.user_id %>
                  <td><%= link_to 'Edit', edit_listing_path(listing) %></td>
          <td><%= link_to 'Destroy', listing, method: :delete, data: { confirm: 'Are you sure?' } %></td>
       
       <%# ***** NOT WORKING, not sure why ******** %>
       
        <%# <% elsif current_user.admin %>
          <%# <td><%= link_to 'Edit', edit_listing_path(listing) %></td>
          <%# <td><%= link_to 'Destroy', listing, method: :delete, data: { confirm: 'Are you sure?' } %></td>
          <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
</div>

